name: "web-api"

services:
  web_api:
    image: docker.io/drimdev/nginx-lab-web-api:v1
    pull_policy: always
    restart: always
    environment:
      ASPNETCORE_URLS: http://+:8080
    ports:
    - "8080:8080"

  web_app:
    image: docker.io/drimdev/nginx-lab-web-app:v1
    pull_policy: always
    restart: always
    environment:
      ASPNETCORE_URLS: http://+:8081
    ports:
    - "8081:8081"
